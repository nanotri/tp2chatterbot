{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compilar Pascal",
      "type": "shell",
      "command": "fpc",
      "args": ["${file}"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "debug",
      "file": "proyectoFinal.lpr",
      "type": "fpc",
      "presentation": {
        "showReuseMessage": false,
        "clear": true,
        "revealProblems": "onProblem"
      },
      "buildOption": {
        "unitOutputDir": "./out",
        "customOptions": ["-dDEBUG", "-gw2"]
      }
    },
    {
      "label": "release",
      "file": "proyectoFinal.lpr",
      "type": "fpc",
      "presentation": {
        "showReuseMessage": false,
        "clear": true,
        "revealProblems": "onProblem"
      },
      "buildOption": {
        "unitOutputDir": "./out",
        "customOptions": ["-dRELEASE", "-O2"]
      }
    }
  ]
}
